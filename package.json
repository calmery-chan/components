{
  "author": "calmery <contact@calmery.me>",
  "description": "A React component library for calmery-chan :books:",
  "engines": {
    "node": ">=12.13.0 <13.0.0",
    "npm": ">=6.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calmery-chan/components.git"
  },
  "version": "0.0.0",
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "jest": "25.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore --fix . --ext .ts --ext .tsx",
    "lint:prettier": "prettier --write \"**/*.{js,json,jsx,md,yml}\""
  }
}
